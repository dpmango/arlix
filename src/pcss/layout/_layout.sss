// preload
.preloader
  display: flex
  justify-content: center
  align-items: center
  position: absolute 0 0 0 0
  z-index: 99
  background: linear-gradient(35deg, #ff00e4, #ffd800)
  transition: all $transitionSpeed $ease
  &.ready
    transform: translate3d(0, -100%, 0)
    pointer-events: none
