*
  box-sizing: border-box
  &:focus
    outline: none

a
  color: inherit
  text-decoration: none
  &:hover, &:focus, &:visited
    text-decoration: none

ul
  list-style: none
  li
    display: inline-block


body, html
  background: color(black a(50%))
  color: $fontColor
  font-family: 'UKIJQolyazma', 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size: 20px
  max-width: 100%
  overflow-x: hidden
  margin: 0
  padding: 0
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

@media($tablet)
  body, html
    font-size: 18px

@media($mobile)
  body, html
    font-size: 16px

.container
  position: relative
  max-width: 1200px
  margin-left: auto
  margin-right: auto
  padding-left: 20px
  padding-right: 20px

.app
  position: relative
  display: flex
  flex-direction: column
  min-height: 100vh
  &__content
    flex: 1
  transition: transform .7s .15s ease-out
  &.tilt
    transform-origin: 50% 100%
    transform: perspective(600px) rotateX(7deg)

.js-slick-sections
  padding: 0

.slick-list
  outline: none
  margin: 0
  &:focus
    outline: none

.section
  position: relative
  min-height: calc(100vh + 6px)
  margin: -3px
  background-repeat: no-repeat
  background-position: center center
  background-size: cover
  &--home
    background-image: url('../images/bgHome.png')
    &::after
      display: block
      content: ' '
      position: absolute 0 0 0 0
      background: linear-gradient(35deg, #ff00e4, #ffd800)
      opacity: .95
  &--portfolio
    background-image: url('../images/bgHome.png')
    &::after
      display: block
      content: ' '
      position: absolute 0 0 0 0
      background: linear-gradient(to top, color(black a(90%)), color(black a(50%)))

// @media(max-height: 600px)
